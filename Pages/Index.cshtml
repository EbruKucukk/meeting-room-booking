@page
@model IndexModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Siber Bilişim Dağıtım A.Ş.</title>

    <!-- Orbitron Font -->
    <link href="https://fonts.googleapis.com/css2?family=Orbitron:wght@500;700&display=swap" rel="stylesheet">

    </style>
</head>
<body>
    <div class="container">
        <div class="left-panel">
            <h1 class="company-name">SİBER TOPLANTI ODASI</h1>
            <img src="/images/siber-logo2.png" alt="Şirket Logosu" class="logo" />
            <!-- Bu bölümü container divinin sonuna ekle -->
            <div id="register-section" class="register-section hidden">
                <div class="form-container">
                    <h2>Hesap Oluştur</h2>
                    <p>Hadi başlayalım!</p>

                    <input type="text" placeholder="Ad Soyad" />
                    <input type="email" placeholder="Email" />
                    <input type="password" placeholder="Şifre" />

                    <button class="signup-btn">Kayıt Ol</button>
                    <p class="alt-option">Zaten hesabınız var mı? <a href="#">Giriş Yap</a></p>
                </div>
            </div>
        </div>
        <div class="right-panel">
            <a href="/PersonelGiris" class="btn">Personel Girişi</a>
            <a href="/Register" class="btn">Sisteme Kayıt</a>
            <a href="/AdminGiris" class="btn">Admin Girişi</a>
        </div>
    </div>
</body>
</html>
